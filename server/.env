# Server Configuration
PORT=3000
NODE_ENV=development

# Database URLs
MONGODB_URL=mongodb://localhost:27017/spintowin
REDIS_URL=redis://localhost:6379

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=YourProgramIdHere

# Security
JWT_SECRET=your-super-secret-jwt-key
ADMIN_API_KEY=your-admin-api-key

# Rate Limiting
SPIN_RATE_LIMIT=5  # spins per minute per IP
SPIN_RATE_WINDOW=60000  # 1 minute in milliseconds

# Business Configuration
DEFAULT_TICKET_PRICE=1.0  # SOL
MAX_SPINS_PER_USER=10
HOUSE_EDGE=0.35  # 35% profit margin

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# External Services (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id